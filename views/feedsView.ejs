<div class="container-md my-5 py-5 px-4">
  <div class="col-md-8 mx-auto">
    <h1><%= post.title %></h1>
    <p class="text-muted date-here"></p>
    <p class="text-muted"><small> <%= post.desc %></small></p>
    <%- post.sanitizeHtml %>
  </div>
</div>
<script>
  const date = new Date('<%= post.createdAt %>');
  const dateHere = document.querySelector('.date-here');
  dateHere.innerHTML = date.toLocaleDateString();

  const img = document.querySelector('img');
  img.setAttribute('src', '<%= post.imgPath %>');
  img.style.width = '100%';
  img.classList.add('centered-image');
</script>
<script>
  const head = document.querySelector('head');
  const link = document.createElement('link');
  link.setAttribute('rel', 'stylesheet');
  link.setAttribute('href', '../public/css/feeds_view_style.css');
  head.appendChild(link);
</script>
