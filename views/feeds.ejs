<section class="py-5">
  <div class="container-lg my-5">
    <div class="row">
      <div class="col-lg-2 box-part">
        <p class="text-center fs-2">Categories</p>
        <div class="list-group category-here">
          <a href="/feeds" class="list-group-item list-group-item-action border-0 bg-transparent">Semua Kategori</a>
          <% cat.forEach((e) => { %>
          <a href="/feeds?category=<%= e.slug %>" class="list-group-item list-group-item-action bg-transparent border-0"><%= e.name %></a>
          <% }); %>
        </div>
      </div>
      <div class="col-lg-10 mt-5 box-part">
        <div class="post-here">
          <% post.forEach( (e) => { %>

          <a href="/feeds/<%= e.slug %>"
            ><div class="card my-3 mx-auto post-cards bg-transparent">
              <div class="row g-0">
                <div class="col-lg-4">
                  <img src="<%= e.imgPath %>" class="img-fluid post-image rounded-start" alt="..." />
                </div>
                <div class="col-lg-8">
                  <div class="card-body">
                    <h5 class="card-title"><%= e.title %></h5>
                    <p class="card-text"><%= e.desc %></p>
                    <p class="card-text timestamps"><small class="text-muted"><%= e.dateCreated.toLocaleDateString() %></small></p>
                    <p class="card-text">Kategori: <%= e.categories %></p>
                  </div>
                </div>
              </div>
            </div></a
          >

          <% }) %>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const head = document.querySelector('head');
  const link = document.createElement('link');
  link.setAttribute('rel', 'stylesheet');
  link.setAttribute('href', '../public/css/feeds_style.css');
  head.appendChild(link);
</script>
